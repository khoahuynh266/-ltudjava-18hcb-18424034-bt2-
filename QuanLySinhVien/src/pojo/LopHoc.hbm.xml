<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
   <class catalog="quanlysinhvien" name="pojo.LopHoc" table="lophoc"  optimistic-lock="version">
        <id name="tenLop" type="string">
            <column name="TenLop" length="10" />
            <generator class="assigned" />
        </id>
        <set inverse="true" name="listSinhVien" fetch="select" lazy="false">
            <key>
                <column length="10" name="TenLop" not-null="true"></column>
            </key>
            <one-to-many class="pojos.SinhVien></one-to-many>
       </set>
    </class>
</hibernate-mapping>